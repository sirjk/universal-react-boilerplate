FROM node:latest

ENV TZ=Europe/Warsaw

RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN apt-get update

RUN git clone https://github.com/sirjk/universal-react-boilerplate.git

WORKDIR universal-react-boilerplate

RUN pwd 

RUN npm install

RUN npm run build:dev

RUN ls

WORKDIR /

RUN ls

RUN mkdir -p outputVol/universal-react-boilerplate

RUN cp -R universal-react-boilerplate outputVol/universal-react-boilerplate

RUN ls

WORKDIR outputVol

RUN ls
